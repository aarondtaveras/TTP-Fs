extends layout

block content
  .jumbotron
    h1= title
    p Sign in to #{title}!
    form(name="sign-in",method="post")
      div.input
        span.label Email
        input(type="text",name="email")
      div.input 
        span.label Password
        input(type="password",name="password")
      div.actions
        input(type="submit")
